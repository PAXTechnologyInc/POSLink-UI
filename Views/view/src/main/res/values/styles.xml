<resources>

    <!-- Base application theme. -->
    <style name="PaxTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PaxTheme.AnimFade" parent="@style/PaxTheme">
        <item name="android:windowAnimationStyle">@style/PaxTheme.notAnimation</item>
    </style>

    <style name="PaxTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="PaxTheme.CustomDialog" parent="@android:style/Theme.Dialog">
        <!-- frame -->
        <item name="android:windowFrame">@null</item>
        <!-- Whether to emerge above activity -->
        <item name="android:windowIsFloating">true</item>
        <!-- translucent -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- no title -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- Background transparency -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- vague -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- Mask layer -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    <style name="PaxTheme.FullScreenDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PaxTheme.ActivityTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="PaxTheme.PopupDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="PaxTheme.DialogButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">@dimen/dialog_btn_width</item>
        <item name="android:layout_height">@dimen/dialog_btn_height</item>
        <item name="android:textSize">@dimen/font_dialog_button</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="PaxTheme.notAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="PaxTheme.ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>


    <style name="PaxTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="PaxTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="PaxKeyboardViewStyle" parent="@android:style/Widget.KeyboardView">
        <item name="android:background">@color/pax_background_keyboard</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:keyBackground">@drawable/pax_keyboard_general</item>
        <item name="android:keyTextSize">12sp</item>
        <item name="android:keyTextColor">@color/primary_text_light</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
</resources>
