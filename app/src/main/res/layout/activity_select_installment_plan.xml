<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectInstallmentPlanActivity">

    <LinearLayout
        android:id="@+id/view_number1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Header1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/choose_a_payment_option"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/ui_text_size_25"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ImageViewLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/VisaLogo"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:foregroundGravity="center_horizontal|left"
                android:layout_marginStart="@dimen/ui_activity_horizontal_margin"
                app:srcCompat="@mipmap/visa_installment_logo1" />
            <TextView
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="3"/>
        </LinearLayout>


        <ScrollView
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:spanCount="2" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/separator_02"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <View
                android:id="@+id/divider01"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="@dimen/ui_activity_horizontal_margin"
                android:background="@color/divider"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/separator_or"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/visa_installment_button_separator_or"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/visa_display_plans_font_color_02"
                android:textSize="@dimen/ui_text_size_20"/>
            <View
                android:id="@+id/divider02"
                android:layout_width="0dp"
                android:layout_marginTop="23dp"
                android:layout_height="1dp"
                android:layout_weight="2"
                android:layout_marginRight="@dimen/ui_activity_horizontal_margin"
                android:background="@color/divider"
                tools:visibility="visible" />
        </LinearLayout>

        <Button
            android:id="@+id/fullAmount"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/ui_activity_horizontal_margin"
            android:layout_marginRight="@dimen/ui_activity_horizontal_margin"
            android:background="@drawable/round_corner_button"
            android:textAllCaps="false"
            android:textColor="@color/background"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_number2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5" />

        <TextView
            android:id="@+id/display_detail_header3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/ui_activity_horizontal_margin"
            android:layout_marginRight="@dimen/ui_activity_horizontal_margin"
            android:gravity="center"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/ui_text_size_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_detail_header1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/ui_activity_horizontal_margin"
            android:layout_marginRight="@dimen/ui_activity_horizontal_margin"
            android:gravity="center"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/ui_text_size_25"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/display_detail_header2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textColor="@color/visa_display_plans_font_color_01"
            android:textSize="@dimen/ui_text_size_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ScrollView
            android:id="@+id/display_detail_scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_marginLeft="@dimen/ui_activity_horizontal_margin"
            android:layout_marginRight="@dimen/ui_activity_horizontal_margin">

            <TextView
                android:id="@+id/display_detail_termAndConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textColor="@color/visa_display_plans_font_color_02"
                android:textSize="@dimen/ui_text_size_18"
                android:lineSpacingExtra="@dimen/visa_installment_terms_and_conditions_line_height"/>
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <Button
            android:id="@+id/display_detail_confirm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginLeft="@dimen/ui_activity_horizontal_margin"
            android:layout_marginRight="@dimen/ui_activity_horizontal_margin"
            android:background="@drawable/round_corner_button_disabled"
            android:gravity="center"
            android:text="@string/trans_confirm_btn"
            android:textColor="@color/background"
            android:textSize="@dimen/ui_text_size_25"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5" />

        <ImageView
            android:id="@+id/display_detail_imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/ui_activity_horizontal_margin"
            android:layout_marginRight="@dimen/ui_activity_horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/display_detail_confirm"
            app:srcCompat="@mipmap/visa_installment_logo1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
