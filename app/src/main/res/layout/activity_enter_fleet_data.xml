<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/space_horizontal"
    android:layout_marginEnd="@dimen/space_horizontal">

    <LinearLayout
        android:id="@+id/trans_amount_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_gap"
        android:layout_marginBottom="@dimen/default_gap"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="Amount"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/font_size_prompt"
            android:paddingStart="@dimen/default_gap" />

        <TextView
            android:id="@+id/amount_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:text="@string/amount_default"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/font_size_value"
            android:paddingEnd="@dimen/default_gap" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/customer_data_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_gap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/customer_data_tv"
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/fleet_customer_data"
                    android:textColor="@color/primary_text_light"
                    android:textSize="@dimen/font_size_hint"
                    android:padding="@dimen/default_gap" />

                <EditText
                    android:id="@+id/customer_data_edt"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:padding="@dimen/default_gap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/department_no_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/department_no_tv"
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/fleet_department_no"
                    android:textColor="@color/primary_text_light"
                    android:textSize="@dimen/font_size_hint"
                    android:padding="@dimen/default_gap" />

                <EditText
                    android:id="@+id/department_no_edt"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:padding="@dimen/default_gap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_id_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_id_tv"
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/fleet_user_id"
                    android:textColor="@color/primary_text_light"
                    android:textSize="@dimen/font_size_hint"
                    android:padding="@dimen/default_gap" />

                <EditText
                    android:id="@+id/user_id_edt"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:padding="@dimen/default_gap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vehicle_id_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vehicle_id_tv"
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/fleet_vehicle_id"
                    android:textColor="@color/primary_text_light"
                    android:textSize="@dimen/font_size_hint"
                    android:padding="@dimen/default_gap" />

                <EditText
                    android:id="@+id/vehicle_id_edt"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:padding="@dimen/default_gap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vehicle_no_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vehicle_no_tv"
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/fleet_vehicle_no"
                    android:textColor="@color/primary_text_light"
                    android:textSize="@dimen/font_size_hint"
                    android:padding="@dimen/default_gap" />

                <EditText
                    android:id="@+id/vehicle_no_edt"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:padding="@dimen/default_gap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/job_no_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/job_no_tv"
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/fleet_job_no"
                    android:textColor="@color/primary_text_light"
                    android:textSize="@dimen/font_size_hint"
                    android:padding="@dimen/default_gap" />

                <EditText
                    android:id="@+id/job_no_edt"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:padding="@dimen/default_gap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/odometer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/odometer_tv"
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/fleet_odometer"
                    android:textColor="@color/primary_text_light"
                    android:textSize="@dimen/font_size_hint"
                    android:padding="@dimen/default_gap" />

                <EditText
                    android:id="@+id/odometer_edt"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:padding="@dimen/default_gap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/driver_id_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/driver_id_tv"
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/fleet_driver_id"
                    android:textColor="@color/primary_text_light"
                    android:textSize="@dimen/font_size_hint"
                    android:padding="@dimen/default_gap" />

                <EditText
                    android:id="@+id/driver_id_edt"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:padding="@dimen/default_gap" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/license_no_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginBottom="@dimen/default_gap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/license_no_tv"
                    android:layout_weight=".45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/fleet_license_no"
                    android:textColor="@color/primary_text_light"
                    android:textSize="@dimen/font_size_hint"
                    android:padding="@dimen/default_gap" />

                <EditText
                    android:id="@+id/license_no_edt"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight=".50"
                    android:layout_width="0dp"
                    android:gravity="end"
                    android:padding="@dimen/default_gap" />
            </LinearLayout>

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/space_vertical"
                android:text="CONFIRM"
                android:textColor="@color/primary_text_dark"
                android:textSize="@dimen/font_button" />
        </LinearLayout>

    </ScrollView>
    >

</LinearLayout>