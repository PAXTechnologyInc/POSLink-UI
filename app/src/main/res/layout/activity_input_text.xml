<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pax.pay.ui.def.EnterTextActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="250dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        >

        <com.pax.us.pay.ui.component.keyboard.PoslinkCustomKeyboardEditText
            android:id="@+id/edit_input_text"
            style="@style/DefEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/tv_input_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/edit_input_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="Enter Amount"
            android:textStyle="bold"
            android:textColor="@color/primary_text_light"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_input_text_ok"
            android:layout_below="@id/edit_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_bg_light"
            android:text="@string/trans_confirm_btn"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_button" />

    </RelativeLayout>

<!--    <include-->
<!--        layout="@layout/pax_layout_keyboard"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_alignParentBottom="true" />-->
</RelativeLayout>
